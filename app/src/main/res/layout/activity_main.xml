<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bcba9f"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="LandChain"
        android:textAlignment="gravity"
        android:textColor="#ffffff"
        android:textSize="60sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/id_text"
        android:layout_width="386dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="177dp"
        android:gravity="center"
        android:text="Enter ID"
        android:layout_marginBottom="10dp"
        android:textAlignment="gravity"
        android:textColor="#ffffff"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/id_edit_text"
        android:layout_width="270dp"
        android:layout_height="80dp"
        android:background="#a3a190"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/id_text"
        android:layout_marginStart="14dp"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/textView"
        android:textAlignment="gravity"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:textStyle="italic"
        android:text="Decentralized land registry" />



    <Button
        android:id="@+id/query_button"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#807f6f"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/id_edit_text"
        android:layout_marginEnd="14dp"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:text="Query" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="331dp"
        android:gravity="center"
        android:text="Land data"
        android:textAlignment="gravity"
        android:textSize="25sp" />

    <TextView
        android:background="#8f8f87"
        android:textColor="#ffffff"
        android:id="@+id/textView8"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textAlignment="gravity"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginBottom="313dp"
        android:text="Owner name" />

    <TextView
        android:id="@+id/owner"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView8"
        android:gravity="center"
        android:textAlignment="gravity"
        android:textColor="#ffffff" />

    <TextView
        android:background="#8f8f87"
        android:textColor="#ffffff"
        android:id="@+id/textView10"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textAlignment="gravity"
        android:gravity="center"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="-313dp"
        android:text="Ex-Owner name" />

    <TextView

        android:textColor="#ffffff"
        android:id="@+id/exowner"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_alignStart="@+id/owner"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="-313dp"
         />

    <TextView
        android:background="#8f8f87"
        android:textColor="#ffffff"
        android:id="@+id/textView12"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textAlignment="gravity"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView10"
        android:text="Sistrict" />

    <TextView

        android:textColor="#ffffff"
        android:id="@+id/district"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/owner"
        android:layout_below="@+id/textView10"
        android:gravity="center"

        android:textAlignment="gravity" />

    <TextView
        android:background="#8f8f87"
        android:textColor="#ffffff"
        android:id="@+id/textView14"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView12"
        android:gravity="center"
        android:text="Taluk"
        android:textAlignment="gravity" />

    <TextView

        android:textColor="#ffffff"
        android:id="@+id/taluk"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textAlignment="gravity"
        android:gravity="center"
        android:layout_alignStart="@+id/owner"
        android:layout_below="@+id/textView12"
         />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView14"
        android:background="#8f8f87"
        android:gravity="center"
        android:text="Village"
        android:textAlignment="gravity"
        android:textColor="#ffffff" />

    <TextView

        android:textColor="#ffffff"
        android:id="@+id/village"
        android:layout_width="197dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/owner"
        android:layout_below="@+id/textView14"
        android:gravity="center"
        android:textAlignment="gravity" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView16"
        android:background="#8f8f87"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="gravity"
        android:textColor="#ffffff" />

    <TextView

        android:textColor="#ffffff"
        android:id="@+id/pattaNumber"
        android:layout_width="195dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/owner"
        android:layout_below="@+id/textView16"
        android:gravity="center"
        android:textAlignment="gravity" />


</RelativeLayout>